generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Donor
  Staff
  Admin
}

enum ItemStatus {
  Pending
  Accepted
  Rejected
  Distributed
}

enum DistStatus {
  Preparing
  InTransit
  Delivered
  Cancelled
}

model User {
  userId         Int       @id @default(autoincrement())
  email          String    @unique
  firstName      String
  lastName       String
  hashedPassword String
  role           String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt

  donationsAsDonor Donation[] @relation("DonorDonations")
  donationsAsStaff Donation[] @relation("StaffDonations")

  // Cleaned up Charity relation
  charityId Int?     @map("charityCharityId")
  Charity   Charity? @relation(fields: [charityId], references: [charityId])

  Distribution Distribution[]

  @@map("users")
}

model Charity {
  charityId    Int       @id @default(autoincrement())
  charityName  String
  charityEmail String    @unique
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt

  // FIX: Mapped to correct DB column names
  charityTeleNum            String  @map("charityTeleNumber")
  charityRegistrationNumber String? @map("charityRegNumber")

  staff         User[]
  addresses     CharityAddress[]
  donations     Donation[]
  inventory     Inventory[]
  distributions Distribution[]

  @@map("charities")
}

model CharityAddress {
  addressId Int       @id @default(autoincrement())
  charityId Int
  charity   Charity   @relation(fields: [charityId], references: [charityId], onDelete: Cascade)
  street    String
  postcode  String    @map("postCode") // Mapped to match typical DB casing if needed, usually safer
  city      String
  country   String
  updatedAt DateTime? @updatedAt

  @@index([charityId])
  // FIX: Changed to PLURAL to match your database
  @@map("charity_addresses")
}

model Donation {
  donationId   Int      @id @default(autoincrement())
  donationDate DateTime @default(now())
  notes        String?

  donorId Int
  donor   User @relation("DonorDonations", fields: [donorId], references: [userId])

  staffId Int?
  staff   User?          @relation("StaffDonations", fields: [staffId], references: [userId])
  status  DonationStatus @default(PENDING)
  items   DonationItem[]

  // FIX: The critical relation for your dashboard
  charityId Int?     @map("charity_id")
  charity   Charity? @relation(fields: [charityId], references: [charityId])

  @@index([donorId])
  @@index([staffId])
  @@index([charityId])
  @@map("donations")
}

model DonationItem {
  itemId         Int           @id @default(autoincrement())
  photoUrl       String?
  description    String?
  status         ItemStatus    @default(Pending)
  donationId     Int
  donation       Donation      @relation(fields: [donationId], references: [donationId], onDelete: Cascade)
  categoryId     Int
  category       Category      @relation(fields: [categoryId], references: [categoryId])
  conditionId    Int
  condition      Condition     @relation(fields: [conditionId], references: [conditionId])
  sizeId         Int?
  size           Size?         @relation(fields: [sizeId], references: [sizeId])
  genderId       Int
  gender         Gender        @relation(fields: [genderId], references: [genderId])
  distributionId Int?
  distribution   Distribution? @relation(fields: [distributionId], references: [distributionId])

  @@index([donationId])
  @@index([categoryId])
  @@index([conditionId])
  @@index([sizeId])
  @@index([genderId])
  @@index([distributionId])
  @@map("donation_items")
}

model Category {
  categoryId  Int            @id @default(autoincrement())
  category    String         @unique
  avgWeight   Decimal        @db.Decimal(10, 2)
  avgCo2Saved Decimal        @db.Decimal(10, 2)
  items       DonationItem[]
  inventory   Inventory[]

  @@map("categories")
}

model Condition {
  conditionId Int            @id @default(autoincrement())
  condition   String         @unique
  items       DonationItem[]

  // FIX: Added this line so Inventory can relate to Condition
  inventory Inventory[]

  @@map("conditions")
}

model Size {
  sizeId    Int            @id @default(autoincrement())
  size      String
  items     DonationItem[]
  inventory Inventory[]

  @@map("size")
}

model Gender {
  genderId  Int            @id @default(autoincrement())
  gender    String         @unique
  items     DonationItem[]
  inventory Inventory[]

  @@map("genders")
}

model Inventory {
  inventoryId Int       @id @default(autoincrement())
  totalStock  Int       @default(0)
  updatedAt   DateTime? @updatedAt

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [categoryId])

  conditionId Int
  condition   Condition @relation(fields: [conditionId], references: [conditionId])

  sizeId Int?
  size   Size? @relation(fields: [sizeId], references: [sizeId])

  genderId Int?
  gender   Gender? @relation(fields: [genderId], references: [genderId])

  charityId Int?     @map("charityCharityId")
  charity   Charity? @relation(fields: [charityId], references: [charityId])

  @@unique([categoryId, conditionId, sizeId, genderId])
  @@map("inventories")
}

model Distribution {
  distributionId Int            @id @default(autoincrement())
  // FIX: Changed 'Date' to 'date' (lowercase) to match database column
  date           DateTime       @default(now())
  status         DistStatus     @default(Preparing)
  notes          String?
  charityId      Int
  charity        Charity        @relation(fields: [charityId], references: [charityId])
  staffId        Int
  staff          User           @relation(fields: [staffId], references: [userId])
  Items          DonationItem[]

  @@index([charityId])
  @@index([staffId])
  @@map("distributions")
}

enum DonationStatus {
  PENDING @map("PENDING")
  pending @map("pending")

  SCHEDULED @map("SCHEDULED")
  scheduled @map("scheduled")

  COLLECTED @map("COLLECTED")
  collected @map("collected")

  REJECTED @map("REJECTED")
  rejected @map("rejected")
}
