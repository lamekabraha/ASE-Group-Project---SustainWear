generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId         Int      @id @default(autoincrement())
  email          String   @unique
  userId         Int      @id @default(autoincrement())
  email          String   @unique
  firstName      String
  lastName       String
  hashedPassword String
  role           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime? @updatedAt
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  donationsAsDonor Donation[]     @relation("DonorDonations")
  donationsAsStaff Donation[]     @relation("StaffDonations")
  Distributions    Distribution[]

  @@map("users")
}

model Charity {
  charityId         Int       @id @default(autoincrement())
  charityName       String
  charityEmail      String    @unique
  charityTeleNumber String    @unique
  charityRegNumber  String    @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime? @updatedAt

  charityAddress CharityAddress[]
  Distribution   Distribution[]

  @@map("charities")
}

model CharityAddress {
  addressId Int       @id @default(autoincrement())
  charityId Int
  charity   Charity   @relation(fields: [charityId], references: [charityId], onDelete: Cascade)
  street    String
  postCode  String
  city      String
  country   String
  updatedAt DateTime? @updatedAt

  @@index([charityId])
  @@map("charity_addresses")
}

model Donation {
  donationId   Int      @id @default(autoincrement())
  donationDate DateTime @default(now())
  notes        String?
  status       String
  donorId      Int
  donor        User     @relation("DonorDonations", fields: [donorId], references: [userId])
  staffId      Int
  staff        User?    @relation("StaffDonations", fields: [staffId], references: [userId])
  items        DonationItem[]

  @@index([donorId])
  @@index([staffId])
  @@index([charityId]) 
  @@map("donations")
}

model DonationItem {
  itemId         Int           @id @default(autoincrement())
  photoUrl       String
  description    String?
  status         String
  donationId     Int
  donation       Donation      @relation(fields: [donationId], references: [donationId])
  categoryId     Int
  category       Category      @relation(fields: [categoryId], references: [categoryId])
  conditionId    Int
  condition      Condition     @relation(fields: [conditionId], references: [conditionId])
  sizeId         Int?
  size           Size?         @relation(fields: [sizeId], references: [sizeId])
  sizeId         Int?
  size           Size?         @relation(fields: [sizeId], references: [sizeId])
  genderId       Int
  gender         Gender        @relation(fields: [genderId], references: [genderId])
  distributionId Int?
  distribution   Distribution? @relation(fields: [distributionId], references: [distributionId])

  @@index([donationId])
  @@index([categoryId])
  @@index([conditionId])
  @@index([sizeId])
  @@index([genderId])
  @@index([distributionId])
  @@map("donation_items")
}

model Distribution {
  distributionId Int            @id @default(autoincrement())
  date           DateTime       @default(now())
  status         String
  notes          String?
  charityId      Int?
  charity        Charity?        @relation(fields: [charityId], references: [charityId])
  staffId        Int?
  staff          User?           @relation(fields: [staffId], references: [userId])
  items          DonationItem[]

  @@index([charityId])
  @@index([staffId])
  @@map("distributions")
}

model Inventory {
  inventoryId Int       @id @default(autoincrement())
  totalStock  Int       @default(0)
  updatedAt   DateTime? @updatedAt
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [categoryId])
  conditionId Int
  condition   Condition @relation(fields: [conditionId], references: [conditionId])
  sizeId      Int?
  size        Size?     @relation(fields: [sizeId], references: [sizeId])
  genderId    Int
  gender      Gender    @relation(fields: [genderId], references: [genderId])

  @@index([categoryId])
  @@index([conditionId])
  @@index([sizeId])
  @@index([genderId])
  @@map("inventories")
}

model Category {
  categoryId  Int     @id @default(autoincrement())
  category    String  @unique
  avgWeight   Decimal @db.Decimal(10, 2)
  avgCo2Saved Decimal @db.Decimal(10, 2)

  items       DonationItem[]
  inventories Inventory[]

  @@map("categories")
}

model Condition {
  conditionId Int    @id @default(autoincrement())
  condition   String @unique

  items       DonationItem[]
  inventories Inventory[]

  @@map("conditions")
}

model Size {
  sizeId    Int            @id @default(autoincrement())
  size      String
  items     DonationItem[]
  inventory Inventory[]

  @@map("size")
}

model Gender {
  genderId  Int            @id @default(autoincrement())
  gender    String         @unique
  items     DonationItem[]
  inventory Inventory[]

  @@map("genders")
}
