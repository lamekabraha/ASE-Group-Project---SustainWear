generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Donor
  Staff
  Admin
}

enum ItemStatus {
  Pending
  Accepted
  Rejected
  Distributed
}

enum DistStatus {
  Preparing
  InTransit
  Delivered
  Cancelled
}

model User {
  userId         Int       @id @default(autoincrement())
  email          String    @unique
  firstName      String
  lastName       String
  hashedPassword String
  role           String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt

  donationsAsDonor Donation[]     @relation("DonorDonations")
  donationsAsStaff Donation[]     @relation("StaffDonations")
  Charity          Charity?       @relation(fields: [charityCharityId], references: [charityId])
  charityCharityId Int?
  Distribution     Distribution[]

  @@map("users")
}

model Charity {
  charityId                 Int       @id @default(autoincrement())
  charityName               String
  charityEmail              String    @unique
  charityTeleNum            String
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime? @updatedAt
  charityRegistrationNumber String?

  staff         User[]
  addresses     CharityAddress[]
  donations     Donation[]
  inventory     Inventory[]
  distributions Distribution[]

  @@map("charities")
}

model CharityAddress {
  addressId Int       @id @default(autoincrement())
  charityId Int
  charity   Charity   @relation(fields: [charityId], references: [charityId], onDelete: Cascade)
  street    String
  postcode  String
  city      String
  country   String
  updatedAt DateTime? @updatedAt

  @@index([charityId])
  @@map("charity_address")
}

model Donation {
  donationId   Int      @id @default(autoincrement())
  donationDate DateTime @default(now())
  donorId      Int
  donor        User     @relation("DonorDonations", fields: [donorId], references: [userId])
  notes        String?
  status       String
  staffId      Int?
  staff        User?    @relation("StaffDonations", fields: [staffId], references: [userId])

  items            DonationItem[]
  Charity          Charity?       @relation(fields: [charityCharityId], references: [charityId])
  charityCharityId Int?

  @@index([donorId])
  @@index([staffId])
  @@map("donations")
}

model DonationItem {
  itemId         Int           @id @default(autoincrement())
  photoUrl       String?
  description    String?
  status         ItemStatus    @default(Pending)
  donationId     Int
  donation       Donation      @relation(fields: [donationId], references: [donationId], onDelete: Cascade)
  categoryId     Int
  category       Category      @relation(fields: [categoryId], references: [categoryId])
  conditionId    Int
  condition      Condition     @relation(fields: [conditionId], references: [conditionId])
  sizeId         Int
  size           Size          @relation(fields: [sizeId], references: [sizeId])
  genderId       Int
  gender         Gender        @relation(fields: [genderId], references: [genderId])
  distributionId Int?
  distribution   Distribution? @relation(fields: [distributionId], references: [distributionId])

  @@index([donationId])
  @@index([categoryId])
  @@index([conditionId])
  @@index([sizeId])
  @@index([genderId])
  @@index([distributionId])
  @@map("donation_items")
}

model Category {
  categoryId  Int            @id @default(autoincrement())
  category    String         @unique
  avgWeight   Decimal        @db.Decimal(10, 2)
  avgCo2Saved Decimal        @db.Decimal(10, 2)
  items       DonationItem[]
  inventory   Inventory[]

  @@map("categories")
}

model Condition {
  conditionId Int            @id @default(autoincrement())
  condition   String         @unique
  items       DonationItem[]

  @@map("conditions")
}

model Size {
  sizeId    Int            @id @default(autoincrement())
  size      String
  items     DonationItem[]
  inventory Inventory[]

  @@map("size")
}

model Gender {
  genderId  Int            @id @default(autoincrement())
  gender    String         @unique
  items     DonationItem[]
  inventory Inventory[]

  @@map("genders")
}

model Inventory {
  inventoryId      Int       @id @default(autoincrement())
  totalStock       Int       @default(0)
  updatedAt        DateTime? @updatedAt
  categoryId       Int
  category         Category  @relation(fields: [categoryId], references: [categoryId])
  sizeId           Int?
  size             Size?     @relation(fields: [sizeId], references: [sizeId])
  genderId         Int?
  gender           Gender?   @relation(fields: [genderId], references: [genderId])
  Charity          Charity?  @relation(fields: [charityCharityId], references: [charityId])
  charityCharityId Int?

  @@unique([categoryId, sizeId, genderId])
  @@map("inventory")
}

model Distribution {
  distributionId Int            @id @default(autoincrement())
  Date           DateTime       @default(now())
  status         DistStatus     @default(Preparing)
  notes          String?
  charityId      Int
  charity        Charity        @relation(fields: [charityId], references: [charityId])
  staffId        Int
  staff          User           @relation(fields: [staffId], references: [userId])
  Items          DonationItem[]

  @@index([charityId])
  @@index([staffId])
  @@map("distributions")
}
